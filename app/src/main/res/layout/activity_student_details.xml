<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".StudentDetailsActivity">

        <ImageView
            android:id="@+id/details_student_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/ic_student_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/details_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/details_student_image"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/details_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/details_name_label"
            app:layout_constraintTop_toTopOf="@id/details_name_label"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="John Doe" />

        <TextView
            android:id="@+id/details_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/details_name_label"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/details_id_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/details_id_label"
            app:layout_constraintTop_toTopOf="@id/details_id_label"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="12345" />

        <TextView
            android:id="@+id/details_phone_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/details_id_label"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/details_phone_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/details_phone_label"
            app:layout_constraintTop_toTopOf="@id/details_phone_label"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="555-1234" />

        <TextView
            android:id="@+id/details_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/details_phone_label"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/details_address_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/details_address_label"
            app:layout_constraintTop_toTopOf="@id/details_address_label"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="123 Main St, Anytown, USA" />

        <TextView
            android:id="@+id/details_checked_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/details_address_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/details_checked_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/details_checked_label"
            app:layout_constraintTop_toTopOf="@id/details_checked_label"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Present" />

        <Button
            android:id="@+id/details_edit_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/details_checked_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>