<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".NewStudentActivity">

        <ImageView
            android:id="@+id/new_student_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_student_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/new_student_name_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/new_student_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/new_student_id_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/new_student_name_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/new_student_phone_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:inputType="phone"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/new_student_id_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/new_student_address_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/new_student_phone_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <CheckBox
            android:id="@+id/new_student_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Present"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/new_student_address_et"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/new_student_save_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/new_student_checkbox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/new_student_cancel_btn"/>

        <Button
            android:id="@+id/new_student_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/new_student_save_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/new_student_save_btn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>